<!-- Modal Register -->
<div class="modal modal-register fade" id="register" tabindex="-1" role="dialog" aria-labelledby="modalRegister" aria-hidden="true">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title" id="modalRegister">Create Account</h4>
			</div>
			<div class="modal-body">
                <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :remote => true, :format => :js, :html => {:class => "form-signin", :multipart => true}) do |f| %>

                    <div class="form-group">
                        <label for="" class="sr-only">First Name</label>
                        <%= f.input :first_name, :autofocus => true, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "First Name" %>
                    </div>
                    <div class="form-group">
                        <label for="" class="sr-only">Last Name</label>
                        <%= f.input :last_name, :autofocus => true, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Last Name" %>
                    </div>
					<div class="form-group">
						<label for="" class="sr-only">Email</label>
                        <%= f.input :email, :autofocus => true, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Email" %>
					</div>

					<div class="form-group">
						<label for="" class="sr-only"> Confirm Email</label>
                        <%= f.input :email, :autofocus => true, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Confirm Email" %>
					</div>
                    
                    <div class="form-group">
                        <label for="" class="sr-only">Password</label>
                        <%= f.input :password, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Password" %>
                    </div>

                    <div class="form-group">
                        <label for="" class="sr-only">Confirm Password</label>
                         <%= f.input :password_confirmation, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Confirm Password" %>
                    </div>

                    <div class="form-group">
                        <%= f.label "Are you a Landlord?" %>
                        <div class="checkbox">
                            <%= f.check_box :is_landlord %>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="" class="sr-only">Upload Profile Image</label>
                        <div class="change-avatar text-center">
                            <%= f.file_field :image %>
                        </div>
                    </div>

                    <%= f.button :submit, "Register", :class => "btn-credential btn btn-flat-alizarin btn-block" %> 

                <% end %>

            </div>
            <div class="modal-footer">
                    <div>
                        <%= link_to "Already have an account? Log in here", remote_sign_in_path, :remote => true, "data-dismiss"=> "modal" %>
                    </div>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal