<!-- Modal Recover -->
<div class="modal modal-recover fade" id="recover" tabindex="-1" role="dialog" aria-labelledby="modalRecover" aria-hidden="true">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title" id="modalRecover">Recover Password</h4>
			</div>
			<div class="modal-body">
				<%= simple_form_for(resource, :as => resource_name, :url => user_password_path(resource_name), :remote => true, :format => :js, :html => {:class => "normal-form"}) do |f| %>
					<div class="form-group">
						<label for="" class="sr-only">Email</label>
						<%= f.input :email, :input_html => {:class => 'form-control'}, :placeholder => "Enter email" %>
					</div>
					<div class="modal-footer">
						<span>Enter email above to recover password.</span>
						<%= f.button :submit, "Submit", :class => "btn-credential btn btn-flat-alizarin btn-block" %>
					</div>
				<% end %>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->