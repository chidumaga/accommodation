<section id="content">
	<div class="container overflow-hidden">

		<div class="row row-offcanvas row-offcanvas-left row-offcanvas-sm row-offcanvas-sm-left row-offcanvas-xs box-padding">

			<div class="tab-content tab-content-account">

				<div class="tab-pane fade in active" id="editprofile">
					<div class="row">

					<%= form_for @user, html: {multipart: true}, class: "normal-form form-horizontal clearfix" do |f| %>
						  <div class="col-md-8">
							  <div class="form-group">
								  <%= f.label :first_name, class: "col-sm-3 control-label" %>
								  <%= f.text_field :first_name, class: 'form-control' %>
							  </div>
							  <div class="form-group">
								  <%= f.label :last_name, class: "col-sm-3 control-label" %>
								  <%= f.text_field :last_name, class: 'form-control' %>
							  </div>
							  <div class="form-group">
								  <%= f.label :email, class: "col-sm-3 control-label" %>
								  <%= f.text_field :email, class: 'form-control' %>
							  </div>
						 </div>
						 <div class="col-md-4">
								<div class="change-avatar text-center">
									<span class="thumb-md avatar"> 
										<%= image_tag @user.image.url(:thumb) %>
									</span>
									<!-- Display filename inside the button instead of its label -->
									<%= f.file_field :image %>
								</div>
							  </div>
						 </div>
						<%= f.submit %>
					<% end %>
				</div>

			</div>

		</div>

	</div>

</section>