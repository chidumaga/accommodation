<section id="content">
	<div class="container overflow-hidden">
		<div class="row row-offcanvas row-offcanvas-left row-offcanvas-sm row-offcanvas-sm-left row-offcanvas-xs box-padding">

			<%= render 'shared/profile_info' %>

			<div class="tab-content tab-content-account">

				<div class="tab-pane fade in active" id="editprofile">
					<div class="row">

					<%= form_for @user, html: {multipart: true}, class: "normal-form form-horizontal clearfix" do |f| %>
					  <div class="col-md-8">
						  <div class="form-group">
							  <%= f.label :first_name, class: "col-sm-3 control-label" %>
							  <%= f.text_field :first_name, class: 'form-control' %>
						  </div>
						  <div class="form-group">
							  <%= f.label :last_name, class: "col-sm-3 control-label" %>
							  <%= f.text_field :last_name, class: 'form-control' %>
						  </div>
						  <div class="form-group">
							  <%= f.label :email, class: "col-sm-3 control-label" %>
							  <%= f.text_field :email, class: 'form-control' %>
						  </div>
						  <!-- <div class="form-group">
						  	<%= f.label "Upload an image of your property" %>
						  	<%= file_field_tag "images[]", type: :file, multiple: true %>
						  </div> -->
						  <%= f.submit %>
					<% end %>
					</div>

					</div>

					</div>

			</div>

		</div>

	</div>

</section>