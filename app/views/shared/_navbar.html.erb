	<!-- Modal Login -->
	<div class="modal modal-login fade" id="modal-login" tabindex="-1" role="dialog" aria-labelledby="modalLogin" aria-hidden="true">
		<div class="modal-dialog modal-sm">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title" id="modalLogin">Log In</h4>
				</div>
				<div class="modal-body">
					<form class="normal-form" role="form">
						<div class="form-group">
							<label for="" class="sr-only">Email</label>
							<input type="email" class="form-control" id="" placeholder="Email">
						</div>
						
						<div class="form-group">
							<label for="" class="sr-only">Password</label>
							<input type="password" class="form-control" id="" placeholder="Password">
						</div>

						<div class="form-group">
							<a href="#modal-recover" data-dismiss="modal" data-toggle="modal" data-target="#modal-recover">Forgot Password?</a>
						</div>
					</form>
				</div>
				<div class="modal-footer">
					<a href="#modal-register" data-dismiss="modal" data-toggle="modal" data-target="#modal-register">I do not have an account. Register here.</a>
					<button type="button" class="btn-credential btn btn-flat-alizarin btn-block">Log In</button>
				</div>
			</div><!-- /.modal-content -->
		</div><!-- /.modal-dialog -->
	</div><!-- /.modal -->

	<!-- Modal Register -->
	<div class="modal modal-register fade" id="modal-register" tabindex="-1" role="dialog" aria-labelledby="modalRegister" aria-hidden="true">
		<div class="modal-dialog modal-sm">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title" id="modalRegister">Register</h4>
				</div>
				<div class="modal-body">
					<form class="normal-form" role="form">
						<div class="form-group">
							<label for="" class="sr-only">Email</label>
							<input type="email" class="form-control" id="" placeholder="Email">
						</div>

						<div class="form-group">
							<label for="" class="sr-only">Email</label>
							<input type="email" class="form-control" id="" placeholder="Confirm Email">
						</div>
						
						<div class="form-group">
							<label for="" class="sr-only">Password</label>
							<input type="password" class="form-control" id="" placeholder="Password">
						</div>

						<div class="form-group">
							<label for="" class="sr-only">Password</label>
